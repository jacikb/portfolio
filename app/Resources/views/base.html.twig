<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="keywords" content="php, symfony, cakephp, delphi ">
        <meta name="description" content="Programista symfony, Programista php, Portfolio Jacek Brzeziński">
        <title>{% block title %}Portfolio Jacek Brzeziński!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.my.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
            {#<link rel="stylesheet" href="{{ asset('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css') }}" />#}
            <link rel="stylesheet" href="{{ asset('https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css') }}" />

            <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
            <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        {% endblock %}
        <script src="{{ asset('vendor/jquery/dist/jquery.js') }}"></script>
        <script src="{{ asset('js/jquery-ui.js') }}"></script>
        <script src="{{ asset('js/openDialog.js') }}"></script>

        {#<script src="{{ asset('https://code.jquery.com/jquery-3.3.1.js') }}"></script>#}
        <script src="{{ asset('https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js') }}"></script>
        <script src="{{ asset('https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js') }}"></script>
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    {#{{ pathToWeb }}#}
        <div class="container" style="margin-top: 15px">
            {% if is_granted("ROLE_USER") %}
                {% include("menuAuthenticated.html.twig") %}
            {% else %}
                {% include("menuAnonymous.html.twig") %}
            {% endif %}
        </div>

        <div class="container">
            {%  for message in app.flashes("success") %}
                <div class="alert alert-info" role="alert">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
            {%  for message in app.flashes("error") %}
                <div class="alert alert-danger" role="alert">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        </div>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <div class="container">
            <div class="footer">
                <hr>
                <p class="text-center">copyright 2018</p>
            </div>
        </div>


        {% block javascripts %}



            <script src="{{ asset('js/main.js') }}"></script>



            <script>
                $(document).ready(function (){
                            $('.switch').click(function(){
                                $('.nav').toggleClass('visible');
                            });
                });
            </script>
            {%  if app.environment != 'dev' %}
                {% include("Tools/google.html.twig") %}
            {% endif %}

            {% if articles is defined %}
                {% include("Tools/animate.html.twig") %}
            {% endif %}

        {% endblock %}
    </body>
</html>
