{% extends 'base.html.twig' %}

{% block body %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Dodawanie nowej pozycji</h3>
        </div>

        <div class="panel-body">

            {{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}

            {{ form_widget(form) }}
            {{ form_row(form.photo) }}
            {{ form_rest(form) }}
            <button class="btn btn-default"> <a href="{{ url('item_index',{'id': 1}) }}"> Anuluj</a></button>
            <button type="submit" id="article_item_submit" xname="article_item[submit]" class="pull-right btn">Zapisz</button>
            {{ form_end(form) }}

        </div>

        {#  include('Tools/dump.html.twig') #}
    </div>

{% endblock body %}