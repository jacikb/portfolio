{% extends 'base.html.twig' %}

{% block body %}

    <div class="panel panel-default" xmlns="http://www.w3.org/1999/html">
        <div class="panel-heading">
            <h3>
                 {{ article.title }}
                <button type="button" id="bt-0" class="btn btn-secondary pull-right">
                    <a href="{{ url('item_add', {'id': article.id}) }}"> Add </a>
                </button>
            </h3>
        </div>

        <div class="panel-body">
        {% for item in items %}
            <div id="item{{ item.id }}">
            {% include 'MyArticle/itemShow.html.twig' with {"item": item} %}
            </div>
        {% endfor %}

        </div>
    </div>

    {% include('Tools/openDialog.html.twig') %}

{% endblock %}